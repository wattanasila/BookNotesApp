<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Book</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>Edit Book</h1>
  </header>

  <!-- Display error message if validation fails -->
  <% if (error) { %>
    <div class="error">
      <p style="color: red;"><%= error %></p>
    </div>
  <% } %>

  <form action="/books/edit/<%= book.id %>" method="POST">
    <div>
      <label for="title">Title:</label>
      <input 
        type="text" 
        id="title" 
        name="title" 
        value="<%= book.title %>" 
        required 
        placeholder="Enter the book title">
    </div>

    <div>
      <label for="author">Author:</label>
      <input 
        type="text" 
        id="author" 
        name="author" 
        value="<%= book.author %>" 
        required 
        placeholder="Enter the author's name">
    </div>

    <div>
      <label for="rating">Rating:</label>
      <select id="rating" name="rating" required>
        <% for (let i = 1; i <= 10; i++) { %>
          <option value="<%= i %>" <%= book.rating === i ? "selected" : "" %>><%= i %></option>
        <% } %>
      </select>
    </div>

    <div>
      <label for="review">Review:</label>
      <textarea 
        id="review" 
        name="review" 
        placeholder="Write your review here..."><%= book.review %></textarea>
    </div>

    <div>
      <label for="date_read">Date Read:</label>
      <input 
        type="date" 
        id="date_read" 
        name="date_read" 
        value="<%= book.date_read ? book.date_read.toISOString().split("T")[0] : "" %>">
    </div>

    <div>
      <label for="cover_url">Cover URL:</label>
      <input 
        type="text" 
        id="cover_url" 
        name="cover_url" 
        value="<%= book.cover_url %>" 
        placeholder="Enter the cover URL (optional)">
    </div>

    <button type="submit">Update Book</button>
  </form>

  <footer>
    <a href="/books">Back to Book List</a>
  </footer>
</body>
</html>